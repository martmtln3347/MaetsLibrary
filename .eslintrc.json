// .eslintrc.json
{
  "extends": ["eslint:recommended", "plugin:import/recommended", "prettier"],
  "env": {
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021
  },
  "rules": {
    "no-unused-vars": ["warn"],
    "no-console": "off"
  }
}
